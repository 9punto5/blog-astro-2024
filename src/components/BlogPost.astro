---
export interface Props {
  title: string;
  date: string;
  hero: string;
  youtube: string;
  tags: string[];
}

const { title, tags, hero, youtube } = Astro.props;
---

<article class="max-w-5xl mx-auto px-14">
  <header class="max-w-3xl content">
    <h1 class="text-3xl leading-relaxed mb-0">{title}</h1>
  </header>

  {
    tags && (
      <div class="-ml-4 -mt-4 flex pt-3 flex-wrap">
        {tags.map((tag) => (
          <span class="text-sm bg-gray-200 text-gray-800 px-2 py-1 rounded-full ml-4 mt-4 font-bold whitespace-nowrap">
            {tag}
          </span>
        ))}
      </div>
    )
  }

  <!-- Image -->
  {
    hero && (
      <div class="pt-6">
        <img
          class="rounded-xl mx-auto"
          style="min-width: 80%;"
          loading="lazy"
          src={hero}
          alt={title}
        />
      </div>
    )
  }

  <!-- YouTube Video -->
  {
    youtube && (
      <div class="embed-responsive aspect-ratio-16/9 mt-6 lg:mt-12">
        <iframe
          width="700"
          height="500"
          class="embed-responsive-item"
          src={`https://www.youtube.com/embed/${youtube}`}
          frameborder="0"
          allow="accelerometer; autoplay; encrypted-media; gyroscope;"
          allowfullscreen
        />
      </div>
    )
  }

  <!-- Content -->
  <section class="max-w-3xl mx-auto py-6 lg:py-12 content">
    <slot />
  </section>
</article>
